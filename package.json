{
  "name": "@usekit/monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "一个即插即用的高级功能扩展库，为 Vue/React/Svelte/JavaScript/TypeScript 项目提供模块化体验",
  "keywords": [
    "vue",
    "react",
    "svelte",
    "hooks",
    "composables",
    "utilities",
    "typescript"
  ],
  "author": "曾星旗",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r --filter './packages/*' run build",
    "dev": "pnpm -r --filter './packages/*' --parallel run dev",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "clean": "pnpm -r exec rm -rf dist node_modules",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "oxlint": "^1.24.0",
    "simple-git-hooks": "^2.12.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint"
  }
}

